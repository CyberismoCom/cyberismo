#!/usr/bin/env node --no-warnings=ExperimentalWarning

import path from 'path';
import program from '@cyberismocom/cli';

const clingoDir = path.resolve(process.cwd(), 'vendor', 'utils', 'clingo');
const graphvizDir = path.resolve(
  process.cwd(),
  'vendor',
  'utils',
  'graphviz',
  'bin',
);

process.env.PATH =
  clingoDir + path.delimiter + graphvizDir + path.delimiter + process.env.PATH;

process.removeAllListeners('warning');

program.parseAsync(process.argv).catch((error) => {
  console.error(error.message);
  process.exit(1);
});
