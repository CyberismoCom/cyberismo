{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "outDir": "./dist",

    "target": "es2022",
    "lib": ["es2020"],
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
