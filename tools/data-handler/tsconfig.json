    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2023",
    "lib": ["es2023"],
    "types": ["node", "mocha"],
    "outDir": "/dist"
  },
  "include": ["src/**/*", "test/**/*.ts"]
}
